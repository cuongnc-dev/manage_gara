<%= form_for @product, remote: true do |f| %>
  <div class="col-xs-12 col-sm-6 min-width-50">
    <div class="form-group">
      <%= f.label :product_code, t(".code") %>
      <%= f.text_field :product_code, class: "form-control", required: true %>
    </div>
    <div class="form-group">
      <%= f.label :name, t(".name") %>
      <%= f.text_field :name, class: "form-control", required: true %>
    </div>
  </div>
  <div class="col-xs-12 col-sm-6 min-width-50">
    <div class="form-group">
      <%= f.label :quantity, t(".quantity") %>
      <%= f.number_field :quantity, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :unit_price, t(".unit_price") %>
      <%= f.text_field :unit_price, class: "form-control" %>
    </div>
  </div>
  <div class="col-xs-12 col-sm-12 text-center">
    <%= f.submit t("save"), class: "btn btn-primary" %>
  </div>
<% end %>
